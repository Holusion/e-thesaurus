{
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "NodeNext",
        "target": "es2022",
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "types": ["mocha", "chai", "chai-as-promised"],
        "outDir": "./dist",
        "rootDir": ".."
    },
    "files": [
        "index.ts",
        "vfs/vfs.benchmark.ts"
    ],
    "include": ["./**/*.ts"],
    "exclude": [
        "node_modules"
    ]
}
