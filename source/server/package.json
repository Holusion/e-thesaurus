{
    "name": "e-thesaurus-server",
    "version": "0.0.1",
    "description": "eThesaurus application, based on Smithsonian DPO Voyager - 3D Explorer and Tool Suite",
    "public": false,
    "scripts": {
        "start": "ROOT_DIR=\"$(pwd)/../..\" node ./dist/server/index.js",
        "test": "mocha",
        "build": "tsc -b ."
    },
    "nodemonConfig": {
        "delay": 1000
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Holusion/ecorpus.git"
    },
    "contributors": [],
    "license": "Apache-2.0",
    "homepage": "https://github.com/Holusion/ecorpus",
    "engines": {
        "node": ">=16"
    },
    "mocha": {
        "ui": "bdd",
        "recursive": true,
        "check-leaks": true,
        "extension": [
            "js",
            "ts"
        ],
        "require": [
            "ts-node/register",
            "./tests-common.ts"
        ],
        "spec": "**/*.test.ts"
    },
    "dependencies": {
        "body-parser": "^1.20.1",
        "cookie-session": "^2.0.0",
        "express": "^4.17.1",
        "morgan": "^1.10.0",
        "nodemon": "^2.0.4",
        "quill": "^1.3.7",
        "sqlite": "^4.1.2",
        "sqlite3": "^5.1.2",
        "three": "^0.146.0",
        "three-bmfont-text": "git+https://github.com/Smithsonian/three-bmfont-text.git#e611dac13d",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/chai-as-promised": "^7.1.5",
        "@types/cookie-session": "^2.0.44",
        "@types/express": "^4.17.14",
        "@types/mocha": "^8.0.0",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16",
        "@types/supertest": "^2.0.12",
        "@types/three": "^0.146.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "mocha": "^8.0.1",
        "supertest": "^6.3.3",
        "webpack-dev-middleware": "^6.0.1"
    }
}
